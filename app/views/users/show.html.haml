.top_page
  .top_page__header
    .top_page__header__inner
      %h1.icon
        =image_tag "http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg"
      .search_box
        %input{class:"search_box__input", placeholder:"キーワードを入力してください"}
        %button{type:"submit", class: "search_box__btn"}
          %i.fas.fa-search{class: "search_box__btn__icon"}
        %ul{class:"search--result"}
    .list
      %ul.list__left
        %li.list__left__category
          =link_to "カテゴリ-", 'http://google.co.jp'
        %li.list__left__brand
          =link_to "ブランド", 'http://google.co.jp'
      %ul.list__right
        %li.list__right__log_in
          =link_to "ログイン", '/users/sign_in'
        %li.list__right__new
          =link_to "新規会員登録", '/users/sign_up'

.side-box
  .side-menu
    %group
      %h2.side-menu__title マイページメニュー
      .group-list
        %p.group-list__notice お知らせ
        %p.group-list__likes いいねした商品
    %group
      %h2.side-menu__title 商品を出品する
      .group-list
        %p.group-list__item 商品を出品
        %p.group-list__sellitem 出品した商品
        %p.group-list__shop 自分のショップを見る
    %group
      %h2.side-menu__title 商品を購入する
      .group-list
        %p.group-list__buy 購入した商品
        %p.group-list__watch 最近見た商品
        %p.group-list__comment コメントした商品
    %group
      %h2.side-menu__title 設定・ヘルプ・その他
      .group-list
        %p.group-list__inquiry お問い合わせ
        %p.group-list__credit クレジットカード登録
        %p.group-list__management ポイント管理
        %p.group-list__logout ログアウト

  .main-box
    %h2.main-box__title 佐藤さんのマイページ
    .main-box__notice
      .main-box__subtitle 
        %h3.main-box__important 重要なお知らせ
      .main-box__body
        .main-box__inbox
          .main-box__left
            =image_tag 'https://asset.fril.jp/assets/new_web/icon_fril-97af0f192f84d4c9b11a13e51473f60125be6cd4be3e611fb074eb876ffe36a0.png', :width =>"31", :height =>"31"
            %h4.main-box__streetaddres 住所の設定を行ってください。<br>
            スムーズに購入を進めるために住所の設定を行ってください。
      .main-box__recently
        .main-box__space
        .main-box__subsubtitle 最近見た商品
        .main-box__body2 
          %p.main-box__center
            %p.main-box__text 商品を閲覧するとここに履歴が表示されます。お気に入りの商品を見つけましょう！
    .main-box__group
      .main-box__brand
        %h1.main-box__menutitle1 注目ブランド
        %p.main-box__box__brand
        %p.main-box__brand1 NIKE
        %p.main-box__brand2 GU
        %p.main-box__brand3 ZARA
      .main-box__brand
        %h2.main-box__menutitle2 コンテンツ
        %p.main-box__brandmenu ブランド一覧
        %p.main-box__category1 カテゴリ一覧
        %p.main-box__category2 キーワード一覧
      .main-box__brand
        %h3.main-box__menutitle3 ガイド
        %p.main-box__guide 公式ガイド
        %p.main-box__beginner 初めての方へ
        %p.main-box__notice お知らせ
