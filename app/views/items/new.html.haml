.contents
  =form_with model: @item, method: :post, local: true do |f|

    .item
      .title
        .title__header
          出品画像
        .title__require
          必須
      %p.comments
        最大10枚までアップロードできます
      .image_upload
        =f.label :image do
          = icon('fas', 'camera')
          = f.file_field :image, multiple: true
        = f.hidden_field :image_cache
      .img

    %hr
    .item
      .title
        .title__header
          商品名
        .title__require
          必須
      .item_text
        = f.text_field :name, autocomplete:"off", class: "text_box", placeholder: "40文字まで", type: "text", maxlength: "40"
      .title
        .title__header
          商品の説明
        .title__require
          必須
      .explanation_text
        = f.text_area :explanation, autocomplete:"off", class: "big_text_box", placeholder: "商品の説明（必須1000文字以内）", maxlength: "1000"
    %hr
    .item
      .title
        .title__nav
          商品の詳細
      .container.category_0__container
        .title
          .title__header
            カテゴリー
          .title__require
            必須
        .column.form_category
          = f.collection_select(:category_id, @categories, :id, :name, prompt: "メインカテゴリを選ぶ", class: "category_0 text_box")
      .container
        .title
          .title__header
            ブランド
          .title__any
            任意
        .column
          = f.collection_select(:brand_id, @brands, :id, :name, prompt: "ブランドを選ぶ", class: "text_box")
      .container.bottom_container
        .title
          .title__header
            商品の状態
          .title__require
            必須
        .column
          = f.select :condition, [["新品", :brand_new],["未使用に近い", :mint],["目立った傷や汚れなし", :bit_damaged],["やや傷や汚れあり", :slight_damaged],["傷や汚れあり", :damaged]], class: "text_box"
    %hr
    .item
      .title
        .title__nav
          配送について
      .container
        .title
          .title__header
            配送料の負担
          .title__require
            必須
        .column
          %select{required: "", class: "text_box",}
            %option{hidden: "", value: ""} 選択してください
            %option{value: "1"} 出品者負担
            %option{value: "2"} 購入者負担
      .container
        .title
          .title__header
            発送元の地域
          .title__require
            必須
        .column
          %select{required: "", class: "text_box",}
            %option{hidden: "", value: ""} 選択してください
            %option{value: "1"} 北海道
            %option{value: "2"} 青森県
            %option{value: "3"} 岩手県
            %option{value: "4"} 宮城県
            %option{value: "5"} 秋田県
            %option{value: "6"} 山形県
            %option{value: "7"} 福島県
