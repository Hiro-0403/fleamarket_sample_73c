      .container.bottom_container
        .title
          .title__header
            発送までの日数
          .title__require
            必須
        .column
          %select{required: "", class: "text_box",}
            %option{hidden: "", value: ""} 選択してください
            %option{value: "1"} 1~2日で発送
            %option{value: "2"} 3~4日で発送
            %option{value: "3"} 5~7日で発送
    %hr
    .item
      .title
        .title__nav
          価格（¥300〜9,999,999）
      .container.bottom_container
        .title
          .title__header
            販売価格
          .title__require
            必須
        .price_text
          ¥
          = f.number_field :price, class: "text_box", placeholder: "0", type: "number", min: "300", max: "9999999"
      .container.bottom_container
        .title
          .title__header
            送料
          .title__require
            必須
        .price_text
          ¥
          = f.number_field :shipping_fee, class: "text_box", placeholder: "0", type: "number", min: "300", max: "9999999"

    .button_area
      .puts_up_btn
        =f.submit "出品する"
        %button{ onclick: "#", type: "submit", value: ""}出品する
      .save_btn
        %button{ onclick: "#", type: "submit", value: ""}下書きに保存
      .return
        %a{href: "/"} もどる
