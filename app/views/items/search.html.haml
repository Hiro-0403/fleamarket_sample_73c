.top_page
  .top_page__header
    .top_page__header__inner
      %h1.icon
        =link_to "/" do
          = image_tag(asset_path('logo.png'), alt: 'logo', class: 'img')
      = form_with(url: search_items_path, method: :get, local: true, class: "search_box") do |f|
        = f.text_field :keyword, class: "search_box__input", placeholder: "キーワードを入力してください"
        = f.button type: "submit", class: "search_box__btn" do
          %i.fas.fa-search
        
    .list
      %ul.list__left
        %li.list__left__category
          =link_to "カテゴリー", 'http://google.co.jp'
        %li.list__left__brand
          =link_to "ブランド", 'http://google.co.jp'
      %ul.list__right
        - if user_signed_in?
          %li.list__right__log_in
            =link_to "マイページ", "#"
          %li.list__right__log_in
            =link_to "ログアウト", destroy_user_session_path, method: :delete, data: {confirm: "ログアウトします。よろしいですか？"}
        - else
          %li.list__right__log_in
            =link_to "ログイン", new_user_session_path
          %li.list__right__new
            =link_to "新規会員登録", new_user_registration_path

.search_lists 
  - if @items.present?
    - @items.each do |item|
      .search_list
        =link_to item_path(id: item.id) ,class:"search_list__item" do
          -item.images.first(1).each do |image|
            = image_tag image.image.url, class:"search_list__item__img"
          .search_list__body
            = item.name 
            .place
              %ul
                = item.price
                %li
                  %i{class:"fa fa-star likeicon"}0
              %p （税込）           
  - else
    .nothing 
      .nothing__message 商品がありません      
        
.banner
  .foot
    %h2.foot__title だれでもかんたん、人生を変えるフリマアプリ
    %p.foot__text 今すぐ無料ダウンロード！
    .foot__btn
      =link_to "https://apps.apple.com/us/app/google-chrome/id535886823?mt=8" do
        =image_tag "https://linkmaker.itunes.apple.com/ja-jp/badge-lrg.svg?releaseDate=2012-06-28&kind=iossoftware&bubble=ios_apps", class: 'app_btn'
      =link_to "https://play.google.com/store" do
        =image_tag "google-play-badge.png", class: 'google_btn'

